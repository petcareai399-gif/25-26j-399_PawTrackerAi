<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F8F9FA">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_114sdp"
                android:background="@drawable/card_header"
                android:backgroundTint="#4ECDC4"
                android:padding="@dimen/_16sdp"
                android:paddingBottom="@dimen/_40sdp">

                <LinearLayout
                    android:id="@+id/headerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivPetAvatar"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_48sdp"
                        android:src="@drawable/ic_dog"
                        android:scaleType="centerCrop"
                        android:padding="@dimen/_8sdp"
                        android:background="@drawable/bg_pet_circle"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_12sdp">

                        <TextView
                            android:id="@+id/tvPetName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bella"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_18ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPetDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 years â€¢ Golden Retriever"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivNotification"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_bell"
                        app:tint="@android:color/white" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Alert Banner - Overlapping Effect -->
            <LinearLayout
                android:id="@+id/alertBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="-32dp"
                android:background="@drawable/card_rounded"
                android:backgroundTint="#FFA726"
                android:orientation="horizontal"
                android:padding="@dimen/_16sdp"
                android:gravity="center_vertical"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_alert"
                    app:tint="@android:color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kennel Cough Alert"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High risk detected near your area"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <!-- Today's Summary Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_14sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Summary"
                    android:textColor="#212121"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <!-- Summary Grid Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <!-- Mood Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMood"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_14sdp"
                        android:background="@drawable/card_rounded"
                        android:backgroundTint="#E8F5F4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_16sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:src="@drawable/ic_mood"
                                android:background="@drawable/bg_add_pet_circle"
                                android:backgroundTint="@color/green_shade"
                                android:padding="@dimen/_5sdp"
                                app:tint="@color/white"
                                android:layout_gravity="start" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:text="Mood"
                            android:textColor="#757575"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvMoodValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="Happy"
                            android:textColor="#212121"
                            android:textSize="@dimen/_14ssp"
                             />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Health Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardHealth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_14sdp"

                        android:background="@drawable/card_rounded"
                        android:backgroundTint="#E8F5F4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_16sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:src="@drawable/ic_health"
                                android:background="@drawable/bg_add_pet_circle"
                                android:backgroundTint="@color/green_shade"
                                android:padding="@dimen/_5sdp"
                                app:tint="@color/white"
                                android:layout_gravity="start" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:text="Health"
                            android:textColor="#757575"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvHealthValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="Good"
                            android:textColor="#212121"
                            android:textSize="@dimen/_14ssp"
                             />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Summary Grid Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Next Feeding Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFeeding"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_14sdp"
                        android:background="@drawable/card_rounded"
                        android:backgroundTint="@color/orange_shade_100"
                        android:padding="@dimen/_16sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_16sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:src="@drawable/ic_main_feed"
                                    android:background="@drawable/bg_add_pet_circle"
                                    android:backgroundTint="@color/orange_primary"
                                    android:padding="@dimen/_5sdp"
                                    app:tint="@color/white"
                                    android:layout_gravity="start" />

                                <View
                                    android:layout_width="@dimen/_45sdp"
                                    android:layout_height="@dimen/_2sdp"/>

                                <ImageView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_15sdp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_clock"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:gravity="end" />
                            </LinearLayout>


                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:text="Next Feeding"
                            android:textColor="#757575"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvFeedingValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="In 2 hrs"
                            android:textColor="#212121"
                            android:textSize="@dimen/_14ssp"
                            />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Activity Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardActivity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_14sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@drawable/card_rounded"
                        android:backgroundTint="@color/orange_shade_100"
                        android:padding="@dimen/_16sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_16sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="@dimen/_32sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:src="@drawable/ic_activity"
                                    android:background="@drawable/bg_add_pet_circle"
                                    android:backgroundTint="@color/orange_primary"
                                    android:padding="@dimen/_5sdp"
                                    app:tint="@color/white"
                                    android:layout_gravity="start" />

                                <View
                                    android:layout_width="@dimen/_23sdp"
                                    android:layout_height="@dimen/_2sdp"/>

                                <TextView
                                    android:id="@+id/tvActivityPercent"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="85%"
                                    android:textColor="#212121"
                                    android:textSize="@dimen/_11ssp"

                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:gravity="end" />
                            </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:text="Activity"
                            android:textColor="#757575"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvActivityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="Active"
                            android:textColor="#212121"
                            android:textSize="@dimen/_14ssp"
                        />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Quick Actions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textColor="#212121"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <!-- Quick Actions Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Check Symptoms -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnCheckSymptoms"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_14sdp"
                        android:background="@drawable/card_rounded"
                        android:backgroundTint="@android:color/white"
                        android:padding="@dimen/_8sdp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_8sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:src="@drawable/ic_symtom"
                            android:padding="@dimen/_8sdp"
                            app:tint="@color/green_primary"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_pet_circle"
                            android:backgroundTint="@color/green_shade_100"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:text="Check Symptoms"

                            android:textColor="#212121"
                            android:textSize="@dimen/_11ssp"
                            android:gravity="center" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Monitor Mood -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnMonitorMood"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_14sdp"
                        android:background="@drawable/card_rounded"
                        android:backgroundTint="@android:color/white"
                        android:padding="@dimen/_16sdp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_8sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:src="@drawable/ic_mood"
                                android:padding="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                app:tint="@color/green_primary"
                                android:background="@drawable/bg_pet_circle"
                                android:backgroundTint="@color/green_shade_100"
                                />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:text="Monitor Mood"
                            android:textColor="#212121"
                            android:textSize="@dimen/_11ssp"
                            android:gravity="center" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Quick Actions Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Feed Now -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnFeedNow"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_14sdp"
                        android:background="@drawable/card_rounded"
                        android:backgroundTint="@android:color/white"
                        android:padding="@dimen/_8sdp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_8sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:src="@drawable/ic_feed"
                                android:padding="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                app:tint="@color/orange_primary"
                                android:background="@drawable/bg_pet_circle"
                                android:backgroundTint="@color/orange_shade_100"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:text="Feed Now"
                                android:textColor="#212121"
                                android:textSize="@dimen/_11ssp"
                                android:gravity="center" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- View Records -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnViewRecords"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_14sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@drawable/card_rounded"
                        android:backgroundTint="@android:color/white"
                        android:padding="@dimen/_16sdp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_8sdp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/_32sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:src="@drawable/ic_health"
                                android:padding="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                app:tint="@color/orange_primary"
                                android:background="@drawable/bg_pet_circle"
                                android:backgroundTint="@color/orange_shade_100"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16sdp"
                                android:text="View Records"
                                android:textColor="#212121"
                                android:textSize="@dimen/_11ssp"
                                android:gravity="center" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Disease Alerts Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Disease Alerts Near You"
                        android:textColor="#212121"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textColor="#4ECDC4"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <!-- Kennel Cough Alert -->
                <LinearLayout
                    android:id="@+id/alertKennelCough"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/card_rounded"
                    android:backgroundTint="#FFEBEE"
                    android:padding="@dimen/_16sdp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:src="@drawable/virus"
                        app:tint="#E57373" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kennel Cough"
                                android:textColor="#212121"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:text="HIGH RISK"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_10ssp"
                                android:background="@drawable/card_rounded"
                                android:backgroundTint="#E57373"
                                android:paddingStart="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_8sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:paddingBottom="@dimen/_4sdp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="24 cases in Colombo this week"
                            android:textColor="#757575"
                            android:textSize="@dimen/_11ssp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:src="@drawable/ic_location"
                                app:tint="#757575" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:text="2.3 km from you"
                                android:textColor="#757575"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Tick-Borne Diseases Alert -->
                <LinearLayout
                    android:id="@+id/alertTickBorne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/card_rounded"
                    android:backgroundTint="#FFF8E1"
                    android:padding="@dimen/_16sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:src="@drawable/tick"
                            app:tint="#FFA726" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:orientation="vertical">

                            <LinearLayout
