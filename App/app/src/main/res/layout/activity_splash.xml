<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashActivity">

    <!-- Title at top -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:text="Welcome To Pawtracker AI"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/orange_primary"/>

    <ImageView
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_230sdp"
        android:layout_below="@+id/titleText"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo"/>

    <!-- Bottom container for description and swipe button -->
    <LinearLayout
        android:id="@+id/bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp">

        <!-- Description text -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_40sdp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Your intelligent companion for pet health monitoring and care"
            android:textAlignment="center"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/_16ssp" />


        <!-- Swipe to start container -->
        <RelativeLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/swipe_track_background"
            android:padding="5dp">

            <!-- Background track with hint text -->
            <TextView
                android:id="@+id/swipeHintText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Swipe to Start â†’"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:alpha="0.6"/>

            <!-- Draggable button with dog icon -->
            <FrameLayout
                android:id="@+id/swipeButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/swipe_button_background"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/dogIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_paw"
                    app:tint="@android:color/white"
                    android:contentDescription="Swipe to start"/>

            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>